<%- include('../layout', { 
  title: title,
  body: `
    <div class="form-page">
      <h2>Add New Card</h2>
      
      <form method="POST" action="/cards">
        <div class="form-row">
          <div class="form-group">
            <label for="name">Card Name *</label>
            <input type="text" id="name" name="name" required placeholder="e.g., Zekrom ex SIR">
          </div>

          <div class="form-group">
            <label for="set_name">Set Name</label>
            <input type="text" id="set_name" name="set_name">
          </div>
        </div>

        <div class="form-row">
          <div class="form-group">
            <label for="condition">Condition *</label>
            <select id="condition" name="condition" required>
              <option value="Mint">Mint</option>
              <option value="Near Mint" selected>Near Mint</option>
              <option value="Lightly Played">Lightly Played</option>
              <option value="Moderately Played">Moderately Played</option>
              <option value="Heavily Played">Heavily Played</option>
              <option value="Damaged">Damaged</option>
            </select>
          </div>

          <div class="form-group">
            <label for="quantity">Quantity *</label>
            <input type="number" id="quantity" name="quantity" value="1" min="0" required>
          </div>
        </div>

        <div class="form-row">
          <div class="form-group">
            <label for="purchase_price">Purchase Price ($) (cost of sealed if pulled) *</label>
            <input type="number" id="purchase_price" name="purchase_price" step="0.01" min="0" value="0" required>
          </div>

          <div class="form-group">
            <label for="market_price">Market Price ($) *</label>
            <input type="number" id="market_price" name="market_price" step="0.01" min="0" value="0" required>
          </div>
        </div>

        <div class="form-group">
          <label for="price_source">Price Source (optional)</label>
          <input type="text" id="price_source" name="price_source" placeholder="e.g., TCGPlayer, eBay">
        </div>

        <div class="form-actions">
          <button type="submit" class="btn btn-primary">Add Card</button>
          <a href="/cards" class="btn btn-secondary">Cancel</a>
        </div>
      </form>
    </div>
  `
}) %>